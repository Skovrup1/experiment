module test {

main :: () -> I32 {
    // full loop
    acc := 0;
    loop i := 0; i < 10; i += 1 {
        acc += i;
    }

    // missing initializer
    i := 0;
    loop ; i < 10; i += 1 {
        acc += 1;
    }

    // missing incrementer
    loop j := 0; j < 10; {
        j += 1;
    }

    // missing initializer and incrementer (while loop)
    k := 0;
    loop ; k < 10; {
        k += 1;
    }

    // infinite loop
    loop ;; {
        break;
    }

    return acc;
}

}
